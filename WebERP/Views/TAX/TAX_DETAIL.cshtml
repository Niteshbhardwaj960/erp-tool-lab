@model IEnumerable<TAX_MASTER>

<nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow" style="background: linear-gradient(135deg, #ff00b1 0%, #3b009a 100%);"> <h3 style="color:white">Tax Details</h3></nav>


@if (Model.Any())
{
    <a class="btn btn-success" style="width:auto" asp-controller="Tax" asp-action="Tax_Master">
        Add
    </a>
    <hr />
    <div class="card mb-3">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tax Name</th>
                            <th>IGST %</th>
                            <th>CGST %</th>
                            <th>SGST %</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Data in Model)
                        {
                            <tr>
                                <td>@Data.TAX_NAME</td>
                                <td>@Data.IGST_PER</td>
                                <td>@Data.CGST_PER</td>
                                <td>@Data.SGST_PER</td>
                                <td>
                                    <a asp-action="EditTax" asp-controller="Tax" asp-route-id="@Data.ID">
                                        <i class="fas fa-user-edit"></i>
                                    </a>&nbsp;&nbsp;
                                    <a asp-action="DeleteTax" asp-controller="Tax" asp-route-id="@Data.ID">
                                        <i class="far fa-trash-alt"></i>
                                    </a>&nbsp;&nbsp;
                                    <a asp-action="ActionTax" asp-controller="Tax" asp-route-id="@Data.ID">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            No Tax Created Yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a Tax
            </h5>
            <a class="btn btn-primary" style="width:auto"  asp-controller="Tax" asp-action="Tax_Master">
                Add
            </a>
        </div>
    </div>
}
