    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Custom fonts for this template-->
    <link href="~/layoutcss/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link href="~/layoutcss/css/sb-admin-2.min.css" rel="stylesheet">
    <!-- Custom styles for this page -->
    <link href="~/layoutcss/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    @*<link href="~/lib/bootstrap/Chosen/chosen.min.css" rel="stylesheet" />*@   
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />    
</head>
<body id="page-top" class="sidebar-toggled">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-info sidebar sidebar-dark accordion toggled" id="accordionSidebar">
            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="#">
                <div class="sidebar-brand-icon rotate-n-15"><i class="fas fa-laptop-code"></i></div>
                <div class="sidebar-brand-text mx-3">ERP<sup>Tool</sup></div>
            </a>
            <!-- Divider -->
            @*<hr class="sidebar-divider d-none d-md-block">*@
            <!-- Sidebar Toggler (Sidebar) -->
            @*<div class="text-center d-md-inline">
                    <button class="rounded-circle border-0" id="sidebarToggle"></button>
                </div>*@
            <!-- Divider -->
            @*<hr class="sidebar-divider my-0">*@
            <!-- Nav Item - Dashboard -->
            @*<li class="nav-item active">
                    <a class="nav-link" asp-action="About" asp-controller="Administration">
                        <i class="fas fa-fw fa-tachometer-alt"></i>
                        <span>About</span>
                    </a>
                </li>*@

            <hr class="sidebar-divider my-0">
            <!-- Nav Item - Dashboard -->
            @*<li class="nav-item active">
                    <a class="nav-link" asp-action="Services" asp-controller="Administration">
                        <i class="fas fa-fw fa-sign-out"></i>
                        <span>Services</span>
                    </a>
                </li>*@
            <partial name="_MenuNavPartial" />
            <!-- Divider -->
            @*<hr class="sidebar-divider my-0">*@
            <!-- Nav Item - Dashboard -->
            @*<li class="nav-item active">
                    <a class="nav-link" asp-action="ContactUs" asp-controller="Administration">
                        <i class="fas fa-fw fa-tachometer-alt"></i>
                        <span>Contact Us</span>
                    </a>
                </li>*@

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow" style="background: linear-gradient(135deg, #a700ff 0%, #00189a 100%);">
                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3" style="background-color:white;">
                        <i class="fa fa-bars"></i>
                    </button>
                    <ul class="navbar-nav ml-auto">
                        @*<div class="topbar-divider d-none d-sm-block"></div>*@
                        <partial name="_LoginPartial" />
                    </ul>
                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    @*<partial name="_CookieConsentPartial" />*@
                    @*<h1 class="h3 mb-4 text-gray-800">*@
                    @RenderBody()
                    @*</h1>*@
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Core ERP Ltd. 2021</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Click Logout below if you are sure to end current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout">
                        <button type="submit" class="btn btn-primary">Logout</button>
                    </form>
                    @*<a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Login", "Account", new { area = "Identity" })">Logout</a>*@
                </div>
            </div>
        </div>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>        
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
