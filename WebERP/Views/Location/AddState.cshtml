@model WebERP.Models.Location.StateModel

@{
    Layout = "_Layout";
}

<nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow" style="background: linear-gradient(135deg, #00ff7ee6 0%, #74009a 100%);"> 
    <h3 style="color:white">Add State</h3>
</nav>
<hr />
<div class="row">    
    <div class="col-lg-12 col-md-12 col-sm-12">
        <form asp-action="AddState">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="countryid">Country</label>
                    <select asp-for="CountryId" class="form-control"
                            asp-items="@(new SelectList(Model.countryDropDown,"Value", "Text"))"></select>
                    <span asp-validation-for="CountryId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="StateCode">State Code</label>
                    <input type="text" class="form-control" asp-for="StateCode" placeholder="State code like e.g CH for Chandigarh">
                    <span asp-validation-for="StateCode" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label for="Name">State Name</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="State name here...">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mr-2">Create</button>
        </form>
    </div>
</div>
<hr/>
<div>
    <a asp-route-tabname="State" asp-action="SwitchToTabs"><i class="fas fa-arrow-left"></i>Back To List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

