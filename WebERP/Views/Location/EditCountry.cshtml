@model WebERP.Models.Location.CountryModel

@{
    ViewData["Title"] = "EditCountry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow" style="background: linear-gradient(135deg, #00ff7ee6 0%, #74009a 100%);">
    <h3 style="color:white">Update Country Details</h3>
</nav>
<hr />
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <form asp-action="EditCountry">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="countrycode">Country Code</label>
                    <input asp-for="CountryCode" class="form-control" />
                    <span asp-validation-for="CountryCode" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label for="countryname">Country Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="createddate">Created On</label>
                    <input asp-for="Ins_Date" class="form-control" readonly />
                </div>
                <div class="form-group col-md-6">
                    <label for="createdby">Created By</label>
                    <input asp-for="Ins_Uid" class="form-control" readonly />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="modifieddate">Modified On</label>
                    <input asp-for="Upd_Date" class="form-control" readonly />
                </div>
                <div class="form-group col-md-6">
                    <label for="modifiedon">Modified By</label>
                    <input asp-for="Upd_Uid" class="form-control" readonly />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="LocationDetails" asp-controller="Location"><i class="fas fa-arrow-left"></i>Back To List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
