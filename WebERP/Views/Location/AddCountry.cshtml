@model WebERP.Models.Location.CountryModel

@{
    Layout = "_Layout";
}
<nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow" style="background: linear-gradient(135deg, #00ff7ee6 0%, #74009a 100%);"> <h3 style="color:white">Add Country</h3></nav>
<hr />
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <form asp-action="AddCountry">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="countrycode">Country Code</label>
                    <input type="text" class="form-control" asp-for="CountryCode" placeholder="country code like e.g IN for India">
                    <span asp-validation-for="CountryCode" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label for="countryName">Country Name</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="country name here...">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mr-2">Create</button>
        </form>        
    </div>
</div>
<hr />
<div>
    <a asp-action="LocationDetails" asp-controller="Location"><i class="fas fa-arrow-left"></i>Back To List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

