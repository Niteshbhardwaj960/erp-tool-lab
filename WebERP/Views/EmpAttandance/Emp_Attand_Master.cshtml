@model WebERP.Models.Employee_Attandance
<script src="~/lib/jquery/dist/jquery.js"></script>
<div class="modal-content show-modal-content form_content">
    <div class="card">
        @if (Model.Type == "Add")
        {
            <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow" style="background: linear-gradient(135deg, #ff00b1 0%, #3b009a 100%);">
                <h3 style="color:white">Add Employee Attandance</h3>
            </nav>
        }
        @if (Model.Type == "Edit")
        {
            <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow" style="background: linear-gradient(135deg, #ff00b1 0%, #3b009a 100%);">
                <h3 style="color:white">Edit Employee Attandance</h3>
            </nav>
        }
        @if (Model.Type == "Action")
        {
            <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow" style="background: linear-gradient(135deg, #ff00b1 0%, #3b009a 100%);">
                <h3 style="color:white">View Employee Attandance</h3>
            </nav>
        }

        <div class="card-body">

            <form id="menu-form" method="post">
                <h4 class="mb-4 navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow"><b>Attandance Details</b></h4>
                <div class="row">

                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="branch_id">Document Date</label>
                            <div class="input-group">
                                @Html.TextBoxFor(a => a.DOC_DATE, "{0:yyyy-MM-dd}", new { @ID = "DOC_DATE", @class = "form-control", @type = "date" })                              
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="branch_id">Employee Type</label>
                            <div class="custom-radio">
                                <input asp-for="EMP_TYPE" type="text" class="form-control" id="EMP_TYPE" name="EMP_TYPE" value="Salary" readonly="readonly" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="branch_id">Employee Name</label>
                            <div class="custom-radio">
                                <select asp-for="EMP_CODE" id="ddlEMP" class="form-control Select2DropDown" asp-items="@(new SelectList(Model.EMPDropDown,"Value", "Text"))"></select>                                
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="branch_id">Employee Father's Name</label>
                            <div class="custom-radio">
                                <input asp-for="EMP_FATHER" type="text" readonly="readonly" class="form-control" id="EMP_FATHER" name="EMP_FATHER" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="branch_id">Mobile No.</label>
                            <div class="custom-radio">
                                <input asp-for="EMP_MOB_NO" type="text" readonly="readonly" class="form-control" id="EMP_MOB_NO" name="EMP_MOB_NO" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="branch_id">Department</label>
                            <div class="custom-radio">
                                <input asp-for="EMP_DEP" type="text" readonly="readonly" class="form-control" id="EMP_DEP" name="EMP_DEP" />   
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="branch_id">Salary Month</label>
                            <div class="custom-radio">
                                <input asp-for="SAL_YYYYMM" type="month" class="form-control" id="SAL_YYYYMM" name="SAL_YYYYMM" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="branch_id">Salary Type</label>
                            <div class="custom-radio">
                                <select class="form-control" asp-for="SAL_YYYYMM_BRK">
                                    <option value="0">Full Month</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="branch_id">Pay Days</label>
                            <div class="input-group">
                                @Html.TextBoxFor(a => a.PAY_DAYS, new { @ID = "PAY_DAYS", @class = "form-control", @type = "decimal" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="branch_id">OverTime Hours</label>
                            <div class="input-group">
                                @Html.TextBoxFor(a => a.OT_HRS, new { @ID = "OT_HRS", @class = "form-control", @type = "decimal" })
                            </div>
                        </div>
                    </div>
                    @if ((Model.Type == "Edit") || (Model.Type == "Action"))
                    {
                        <div class="col-lg-4 col-md-4 col-sm-12">
                            <div class="form-group">
                                <label for="branch_id">Insert Date</label>
                                <div class="input-group">
                                    <input type="datetime-local" readonly="readonly" class="form-control" asp-for="INS_DATE" />
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-12">
                            <div class="form-group">
                                <label for="branch_id">Insert By</label>
                                <div class="input-group">
                                    <input type="text" readonly="readonly" class="form-control" asp-for="INS_UID" />
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-12">
                            <div class="form-group">
                                <label for="branch_id">Update Date</label>
                                <div class="input-group">
                                    <input type="datetime-local" readonly="readonly" class="form-control" asp-for="UDT_DATE" />
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-12">
                            <div class="form-group">
                                <label for="branch_id">Update By</label>
                                <div class="input-group">
                                    <input type="text" readonly="readonly" class="form-control" asp-for="UDT_UID" />
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12">
                    &nbsp;&nbsp;<a class="btn btn-app mr-2 mt-1 mb-1 btn-secondary pull-right" asp-action="Emp_Attand_Details">Close</a>
                    @if (Model.Type == "Add")
                    {
                        <button class="btn btn-app btn-danger mr-2 mt-1 mb-1 us-button pull-right" type="submit" asp-controller="Advance" asp-action="Emp_Adv_Master">
                            <i class="fa fa-save"></i> Save
                        </button>
                    }
                    @if (Model.Type == "Edit" && Model.paidType == "NonPaid")
                    {
                        <button class="btn btn-app btn-danger mr-2 mt-1 mb-1 us-button pull-right" type="submit" asp-controller="Advance" asp-action="Edit_Advance">
                            <i class="fa fa-save"></i> Update
                        </button>
                    }
                </div>
            </form>

        </div>

    </div>
</div>
