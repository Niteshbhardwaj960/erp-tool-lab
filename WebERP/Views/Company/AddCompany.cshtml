                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="branch_id">Fax No</label>
                            <div class="input-group">
                                <input type="text" class="form-control numb" name="FAX_NO" id="FAX_NO">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="branch_id">URL</label>
                            <div class="input-group">
                                <input type="text" class="form-control numb" name="URL" id="URL">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="branch_id">Lst No</label>
                            <div class="input-group">
                                <input type="text" class="form-control numb" name="LST_NO" id="LST_NO">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="branch_id">Lst Date</label>
                            <div class="input-group">
                                <input type="date" class="form-control" name="LST_DATE" id="LST_DATE">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="branch_id">Cst No</label>
                            <div class="input-group">
                                <input type="text" class="form-control numb" name="CST_NO" id="CST_NO">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="branch_id">Cst Date</label>
                            <div class="input-group">
                                <input type="date" class="form-control" id="CST_DAT" name="CST_DAT">
                                @*<input type="text" class="form-control numb" name="CST_DATE" id="CST_DATE" placeholder="CST DATE" value="">*@
                            </div>
                        </div>
                    </div>
                </div>
                <h4 class="mb-4 navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow"><b>Bank Details</b></h4>
