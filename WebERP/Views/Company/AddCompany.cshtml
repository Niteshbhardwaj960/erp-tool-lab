                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="branch_id">MSME No</label>
                            <div class="input-group">
                                <input type="text" class="form-control numb" name="MSME_NO" id="MSME_NO">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="branch_id">Logo Name</label>
                            <div class="input-group">
                                <input type="text" class="form-control numb" name="LOGO_NAME" id="LOGO_NAME">
                            </div>
                        </div>
                    </div>
                </div>

                @*</div>*@
                <div class="col-lg-12 col-md-12 col-sm-12">
                    &nbsp;&nbsp;<a class="btn btn-app mr-2 mt-1 mb-1 btn-secondary pull-right" asp-action="Company">Close</a>
                    <button class="btn btn-app btn-danger mr-2 mt-1 mb-1 us-button pull-right" asp-controller="Company" asp-action="SAVECompany">
                        <i class="fa fa-save"></i> Save
                    </button>

                </div>
            </form>
        </div>

    </div>
</div>
<script>
    $(function () {
        $("#ddlCity").change(function () {
            debugger;
            $.getJSON("/Company/Getstatelist", { ctid: $("#ddlCity").val() }, function (d) {
                debugger;
                var row = "";
                $("#ddlState").empty();
                $("#ddlCountry").empty();
                $.each(d, function (i, v) {
                    row += "<option value=" + v.value + ">" + v.text + "</option>";
                });
                $("#ddlState").html(row);

            })

        })
    })
</script>