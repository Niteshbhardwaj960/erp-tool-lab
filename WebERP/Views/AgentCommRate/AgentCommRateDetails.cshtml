@model IEnumerable<WebERP.Models.AgentCommRate>

<nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow" style="background: linear-gradient(135deg, #ff00b1 0%, #3b009a 100%);"> <h3 style="color:white">Agent Commission Rate Details</h3></nav>


@if (Model.Any())
{
    <a class="btn btn-primary" style="width:auto" asp-controller="AgentCommRate" asp-action="AgentCommRate_Master">
        Add
    </a>
    @*<a class="btn btn-success" style="width:auto" asp-controller="Company" asp-action="Excel">
            Export
        </a>*@
    <hr />
    <div class="card mb-3">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Account Name</th>
                            <th>Commission Rate</th>
                            <th>Qty Amount Tag</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Data in Model)
                        {
                            <tr>
                                <td>@Data.ACC_NAME</td>
                                <td>@Data.COMM_RATE</td>
                                <td>@Data.QTY_AMOUNT_TAG</td>
                                <td>
                                    <a asp-action="EditACR" asp-controller="AgentCommRate" asp-route-id="@Data.ID">
                                        <i class="fas fa-user-edit"></i>
                                    </a>&nbsp;&nbsp;
                                    <a asp-action="DeleteACR" asp-controller="AgentCommRate" asp-route-id="@Data.ID">
                                        <i class="far fa-trash-alt"></i>
                                    </a>&nbsp;&nbsp;
                                    <a asp-action="ActionACR" asp-controller="AgentCommRate" asp-route-id="@Data.ID">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            No Agent Commission Rate Entry Created Yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to Add Agent Commission Rate
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="AgentCommRate" asp-action="AgentCommRate_Master">
                Add
            </a>
        </div>
    </div>
}
