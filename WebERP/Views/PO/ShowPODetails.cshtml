
@model WebERP.Models.POViewModel

@{
    ViewData["Title"] = "PODetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="navbar navbar-expand navbar-light bg-white topbar mb-3 static-top shadow"
     style="background: linear-gradient(135deg, rgb(255 141 0 / 90%) 0%, #74009a 100%);">
    <h3 style="color:white">Purchasing Order Details</h3>
</nav>

<div class="card">
    <div class="card-body">
        <form id="poForm">
            <h4 class="mb-4 navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow"><b>PO Header Details</b></h4>
            <div class="row">
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="form-group">
                        <label>Company</label>
                        <input type="text" class="form-control" id="orderFinancialYear" asp-for="POHeader.COMP_NAME" readonly>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <label>Date of Purchase</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="fa fa-calendar tx-16 lh-0 op-6"></i>
                            </div>
                        </div>
                        <input class="form-control fc-datepicker" asp-for="POHeader.ORDER_DATE" readonly>
                    </div>

                </div>

                <div class="col-lg-2 col-md-4 col-sm-6">
                    <div class="form-group">
                        <label>Order Financial Year</label>
                        <input type="text" class="form-control" asp-for="POHeader.ORDER_FINYEAR" readonly>
                    </div>
                </div>

                <div class="col-lg-2 col-md-4 col-sm-6">
                    <div class="form-group">
                        <label for="order_number">Order number</label>
                        <input type="text" class="form-control" asp-for="POHeader.ORDER_NO" readonly>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <div class="form-group">
                        <label>Party Name</label>
                        <input type="text" class="form-control" id="orderFinancialYear" asp-for="POHeader.ACC_NAME" readonly>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="form-group">
                        <label>Remarks</label>
                        <input type="text" class="form-control" asp-for="POHeader.REMARKS" readonly>
                    </div>
                </div>
            </div>

            @*<hr class="alert-danger" />*@
            <h4 class="mb-4 navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow"><b>PO Item Details</b></h4>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="poDtlTable" width="100%" cellspacing="0">
                            <thead class="thead-light">
                                <tr style="text-align:center;">
                                    @*<th style="width: 50px;">Id</th>*@
                                    <th style="width: 150px;">Item</th>
                                    <th style="width: 90px;">Qty UOM</th>
                                    <th style="width: 128px;">Rate UOM</th>
                                    <th style="width: 100px;">Qty</th>
                                    <th style="width: 150px;">Rate Per</th>
                                    <th style="width: 100px;">Disc Per%</th>
                                    <th style="width: 100px;">Disc Rate</th>
                                    <th style="width: 100px;">Net Rate</th>
                                    <th style="width: 150px;">Amt.</th>
                                    <th style="width: 150px;">Delivery Date</th>
                                    <th style="width: 40px;">Status</th>
                                    <th style="width: 150px;">Remarks</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int j = 0; j < Model.PODetails.Count(); j++)
                                {
                                    <tr>
                                        @*<td>
                                        @Html.TextBoxFor(m => m.PODetails[j].POD_PK, new { @class = "form-control", @readOnly = "readonly" })
                                    </td>*@
                                        <td>
                                            @Html.TextBoxFor(m => m.PODetails[j].ITEM_NAME, new { @class = "form-control", @readOnly = "readonly" })
                                        </td>
                                        <td>                                          
                                            @Html.TextBoxFor(m => m.PODetails[j].QTYUOMNAME, new { @class = "form-control", @readOnly = "readonly" })                                            
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.PODetails[j].RATEUOM_NAME, new { @class = "form-control", @readOnly = "readonly" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.PODetails[j].QTY, new { @class = "form-control", @readOnly = "readonly" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.PODetails[j].RATE, new { @class = "form-control", @readOnly = "readonly" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.PODetails[j].DISC_PER, new { @class = "form-control", @readOnly = "readonly" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.PODetails[j].DISC_RATE, new { @class = "form-control", @readOnly = "readonly" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.PODetails[j].NET_RATE, new { @class = "form-control", @readOnly = "readonly" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.PODetails[j].AMOUNT, new { @class = "form-control", @readOnly = "readonly" })
                                        </td>
                                        <td>
                                            <input class="form-control fc-datepicker" type="date" asp-for="PODetails[j].DELV_DATE" readonly>
                                            @*@Html.TextBoxFor(m => m.PODetails[j].DELV_DATE, new { @class = "form-control fc-datepicker", @readOnly = "readonly" })*@
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.PODetails[j].POD_PK_STATUS, new { @class = "form-control", @readOnly = "readonly" })
                                        </td>
                                        <td>
                                            @Html.TextAreaFor(m => m.PODetails[j].REMARKS, new { @class = "form-control", @readOnly = "readonly" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="2"></td>
                                    <td>
                                        <label>Total Qty:</label>
                                    </td>
                                    <td>
                                        @ViewBag.pograndQTotal
                                    </td>
                                    <td colspan="3"></td>
                                    <td>
                                        <label>Total Amt:</label>
                                    </td>
                                    <td colspan="2">
                                        @ViewBag.pograndTotal
                                    </td>
                                    <td colspan="4"></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            @*<hr class="alert-danger" />*@
            <h4 class="mb-4 navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow"><b>PO Term Details</b></h4>
            <div class="row justify-content-md-center">
                <div class="col-lg-8 col-md-8 col-sm-8">
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered" id="poTermDtlTable">
                            <thead class="thead-light">
                                <tr>
                                    <th>Terms & Conditions</th>
                                    <th>Remarks</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.POTerms.Count(); i++)
                                {
                                    <tr>
                                        <td>
                                            @Html.TextBoxFor(m => m.POTerms[i].TERMS_NAME, new { @class = "form-control", @readOnly = "readonly" })
                                        </td>
                                        <td>
                                            @Html.TextAreaFor(m => m.POTerms[i].REMARKS, new { @class = "form-control", @readOnly = "readonly" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>           
        </form> 
        <div>
            <a asp-action="POGridDetails" asp-controller="PO"><i class="fas fa-arrow-left"></i>Back To Grid</a>
        </div>
    </div>
</div>



