@model WebERP.Models.POViewModel

@{
    ViewData["Title"] = "PODetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="navbar navbar-expand navbar-light bg-white topbar mb-3 static-top shadow"
     style="background: linear-gradient(135deg, rgb(255 141 0 / 90%) 0%, #74009a 100%);">
    <h3 style="color:white">Edit Purchasing Order</h3>
</nav>

<div class="card">
    <div class="card-body">
        <form method="post" id="poForm">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="PO" asp-action="POGridDetails">PO</a></li>
                    <li class="breadcrumb-item">Update PO</li>
                    <li class="breadcrumb-item active" aria-current="page">Fill Data</li>
                </ol>
            </nav>
            <h4 class="mb-4 navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                <b>PO Header Details</b>
            </h4>
            <div class="row">
                <input class="form-control" style="display:none;" asp-for="POHeader.POH_PK">
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="form-group">
                        <label>Company</label>
                        <select asp-for="POHeader.COMP_CODE" class="form-control"
                                asp-items="@(new SelectList(Model.POHeader.companyDropDown,"Value", "Text"))" readonly></select>
                       
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <label>Date of Purchase</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="fa fa-calendar tx-16 lh-0 op-6"></i>
                            </div>
                        </div>
                        <input class="form-control fc-datepicker" id="purchaseDate" type="date" asp-for="POHeader.ORDER_DATE">
                    </div>

                </div>

                <div class="col-lg-2 col-md-4 col-sm-6">
                    <div class="form-group">
                        <label>Order Financial Year</label>
                        <input type="text" class="form-control" id="orderFinancialYear" asp-for="POHeader.ORDER_FINYEAR" readonly>
                    </div>
                </div>

                <div class="col-lg-2 col-md-4 col-sm-6">
                    <div class="form-group">
                        <label>Order No</label>
                        <input type="text" class="form-control" id="orderNo" asp-for="POHeader.ORDER_NO" readonly>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <div class="form-group">
                        <label>Party Name</label>
                        <select asp-for="POHeader.ACC_CODE" class="form-control poDropDown"
                                asp-items="@(new SelectList(Model.POHeader.accDropDown, "Value", "Text"))"></select>
                        <span asp-validation-for="POHeader.ACC_CODE" class="text-danger"></span>
                        @*@Html.DropDownListFor(m=>m.POHeader.ACC_CODE,
                                         new SelectList(Model.POHeader.accDropDown, "Value", "Text"),
                                         new { @class="form-control"})*@
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="form-group">
                        <label>Remarks</label>
                        <input type="text" class="form-control" asp-for="POHeader.REMARKS" placeholder="Place order remarks here">
                    </div>
                    @Html.HiddenFor(a => a.POHeader.INS_DATE, new { @class = "form-control"})
                    @Html.HiddenFor(a => a.POHeader.INS_UID, new { @class = "form-control"})
                </div>
            </div>

            <h4 class="mb-4 navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow"><b>PO Item Details</b></h4>

            <div class="row" style="font-size:small;">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="table-responsive-sm">
                        <table class="table table-sm d-sm-table-cell table-bordered" id="poDtlTable" width="100%" cellspacing="0">
                            <thead class="thead-light">
                                <tr style="text-align:center;">
                                    <th style="width: 240px;">Item</th>
                                    <th style="width: 50px;">UOM</th>
                                    <th style="width: 80px;">Rate UOM</th>
                                    <th style="width: 100px;">Qty</th>
                                    <th style="width: 150px;">Rate Per</th>
                                    <th style="width: 100px;">Disc Per%</th>
                                    <th style="width: 100px;">Disc Rate</th>
                                    <th style="width: 100px;">Net Rate</th>
                                    <th style="width: 150px;">Amt.</th>
                                    <th style="width: 50px;">Delivery Date</th>
                                    <th style="width: 125px;">Status</th>
                                    <th style="width: 150px;">Remarks</th>
                                    <th style="text-align:center;width: 50px;">
                                        <a href="#" class="btn btn-info" id="addRow">
                                            <i class="fa fa-plus-circle"></i>
                                        </a>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int j = 0; j < Model.PODetails.Count(); j++)
                                {
                                <tr class="template">

                                    @Html.HiddenFor(m => m.PODetails[j].POD_PK, new { @class = "form-control", @readOnly = "readonly" })

                                    <td>
                                        @Html.DropDownListFor(m=>m.PODetails[j].ITEM_CODE,
                                          new SelectList(Model.PODetails[j].GetItems, "Value", "Text"),
                                          new { @class="form-control"})
                                    </td>
                                    <td>
                                        @Html.HiddenFor(a => a.PODetails[j].QTY_UOM, new { @class = "form-control" })
                                        @Html.TextBoxFor(m => m.PODetails[j].QTYUOMNAME, new { @class = "form-control", @readOnly = "readonly" })
                                    </td>
                                    <td>
                                        @Html.DropDownListFor(m=>m.PODetails[j].RATE_UOM,
                                          new SelectList(string.Empty, "Value", "Text"),
                                          new { @class= "form-control" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(m => m.PODetails[j].QTY, new { @class = "form-control", @type = "number" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(m => m.PODetails[j].RATE, new { @class = "form-control", @type = "number" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(m => m.PODetails[j].DISC_PER, new { @class = "form-control", @type = "number" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(m => m.PODetails[j].DISC_RATE, new { @class = "form-control", @readOnly = "readonly" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(m => m.PODetails[j].NET_RATE, new { @class = "form-control", @readOnly = "readonly" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(m => m.PODetails[j].AMOUNT, new { @class = "form-control", @readOnly = "readonly" })
                                    </td>
                                    <td>
                                        <input class="form-control fc-datepicker" type="date" asp-for="PODetails[j].DELV_DATE">
                                        @*@Html.TextBoxFor(m => m.PODetails[j].DELV_DATE, new { @class = "form-control fc-datepicker", @type = "date" })*@
                                    </td>
                                    <td>
                                        @if (Model.PODetails[j].POD_PK_STATUS == "A")
                                        {
                                            @Html.DropDownListFor(m=>m.PODetails[j].POD_PK_STATUS,
                                                                                        new SelectList(new List<Object>{
                                                                                                                         new { value = "A" , text = "Active"  },
                                                                                                                         new { value = "C" , text = "Cancelled" },
                                                                                                                         new { value = "F" , text = "Finished"}}, "value", "text", 0),
                                                                                        new { @class="form-control"})
                                        }
                                        @if (Model.PODetails[j].POD_PK_STATUS == "F")
                                        {
                                            @Html.DropDownListFor(m=>m.PODetails[j].POD_PK_STATUS,
                                                                                        new SelectList(new List<Object>{
                                                                                                                         new { value = "A" , text = "Active"  },
                                                                                                                         new { value = "C" , text = "Cancelled" },
                                                                                                                         new { value = "F" , text = "Finished"}}, "value", "text", 2),
                                                                                        new { @class="form-control"})
                                        }
                                        @if (Model.PODetails[j].POD_PK_STATUS == "C")
                                        {
                                            @Html.DropDownListFor(m=>m.PODetails[j].POD_PK_STATUS,
                                                                                        new SelectList(new List<Object>{
                                                                                                                         new { value = "A" , text = "Active"  },
                                                                                                                         new { value = "C" , text = "Cancelled" },
                                                                                                                         new { value = "F" , text = "Finished"}}, "value", "text", 1),
                                                                                        new { @class="form-control"})
                                        }
                                    </td>
                                    <td>
                                        @Html.TextAreaFor(m => m.PODetails[j].REMARKS, new { @class = "form-control" })
                                    </td>
                                    <td style="text-align:center;">
                                        <a href="#" class="btn btn-danger" id="deleteRow">
                                            <i class="fa fa-minus-circle"></i>
                                        </a>
                                    </td>
                                    @Html.HiddenFor(a => a.PODetails[j].INS_DATE, new { @class = "form-control" })
                                    @Html.HiddenFor(a => a.PODetails[j].INS_UID, new { @class = "form-control" })
                                </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="2"></td>
                                    <td>
                                        <label>Total Qty:</label>
                                    </td>
                                    <td>
                                        <input class="form-control" id="totalQuant" value="@ViewBag.pograndQTotal" readonly />
                                    </td>
                                    <td colspan="3"></td>
                                    <td>
                                        <label>Total Amt:</label>
                                    </td>
                                    <td colspan="2">
                                        <input class="form-control" id="totalAmount" value="@ViewBag.pograndTotal" readonly />
                                    </td>
                                    <td colspan="4"></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
            <hr />
            <h4 class="mb-4 navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow"><b>PO Term Details</b></h4>
            <div class="row justify-content-md-center">
                <div class="col-lg-8 col-md-8 col-sm-8">
                    <div class="table-responsive-sm">
                        <table class="table table-sm table-hover table-bordered" id="poTermDtlTable">
                            <thead class="thead-light">
                                <tr>
                                    <th style="width: 50px;">Terms & Conditions</th>
                                    <th style="width: 200px;">Remarks</th>
                                    <th style="text-align:center;width: 50px;">
                                        <a href="#" class="btn btn-info" id="addTermRow">
                                            <i class="fa fa-plus-circle"></i>
                                        </a>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.POTerms.Count(); i++)
                                {
                                <tr class="termtemplate">
                                    <td style="display:none;">
                                        @Html.HiddenFor(m => m.POTerms[i].POT_PK, new { @class = "form-control", @readOnly = "readonly" })
                                    </td>
                                    <td>
                                        @Html.DropDownListFor(m=>m.POTerms[i].TERMS_CODE,
                                         new SelectList(Model.POTerms[i].termDropDown, "Value", "Text"),
                                         new { @class= "form-control" })

                                    </td>
                                    <td>
                                        @Html.TextAreaFor(m => m.POTerms[i].REMARKS, new { @class = "form-control" })
                                    </td>
                                    <td style="text-align:center;">
                                        <a href="#" class="btn btn-danger" id="deleteTermRow">
                                            <i class="fa fa-minus-circle"></i>
                                        </a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <hr class="alert-light" />
            <div class="btn-group" role="group" aria-label="Basic example">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
            </div>
        </form>
        <hr />
        <div>
            <a asp-action="POGridDetails" asp-controller="PO"><i class="fas fa-arrow-left"></i>Back To Grid</a>
        </div>
    </div>
</div>

