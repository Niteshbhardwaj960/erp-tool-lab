@model IEnumerable<WebERP.Models.RMR_HDR>

<nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow" style="background: linear-gradient(135deg, #ff00b1 0%, #3b009a 100%);"> <h3 style="color:white">Raw Material Return</h3></nav>


@if (Model.Any())
{
    <a class="btn btn-primary" style="width:auto" asp-controller="RMR" asp-action="RMR_MASTER">
        Add
    </a>
    @*<a class="btn btn-success" style="width:auto" asp-controller="Company" asp-action="Excel">
            Export
        </a>*@
    <hr />
    <div class="card mb-3">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Doc Date</th>
                            <th>Doc No</th>
                            <th>Employee Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Data in Model)
                        {
                            <tr>
                                <td>@Data.INS_DATE</td>
                                <td>@Data.Doc_No</td>
                                <td>@Data.EMP_NAME</td>
                                <td>
                                    <a asp-action="RMREdit" asp-controller="RMR" asp-route-id="@Data.ID">
                                        <i class="fas fa-user-edit"></i>
                                    </a>&nbsp;&nbsp;
                                    <a asp-action="RMRDelete" asp-controller="RMR" asp-route-id="@Data.ID">
                                        <i class="far fa-trash-alt"></i>
                                    </a>@*&nbsp;&nbsp;
                                    <a asp-action="RMRAction" asp-controller="RMR" asp-route-id="@Data.ID">
                                        <i class="fas fa-eye"></i>
                                    </a>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            No Raw Material Return Entry Created Yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to Add Raw Material Return Entry
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="RMR" asp-action="RMR_MASTER">
                Add
            </a>
        </div>
    </div>
}
