@model IEnumerable<WebERP.Models.MGF_RECEIPT>

<nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow" style="background: linear-gradient(135deg, #ff00b1 0%, #3b009a 100%);"> <h3 style="color:white">Process Receipt Details</h3></nav>


@if (Model.Any())
{
    <a class="btn btn-primary" style="width:auto" asp-controller="MFGReceipt" asp-action="MFG_Receipt_Master">
        Add
    </a>
    @*<a class="btn btn-success" style="width:auto" asp-controller="Company" asp-action="Excel">
            Export
        </a>*@
    <hr />
    <div class="card mb-3">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Doc Date</th>
                            <th>Doc No</th>
                            <th>Employee Name</th>
                            <th>Order No</th>
                            <th>Artical</th>
                            <th>Process</th>
                            <th>Qty</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Data in Model)
                        {
                        <tr>
                            <td>@Data.INS_DATE.Value.Day-@Data.INS_DATE.Value.Month-@Data.INS_DATE.Value.Year</td>
                            <td>@Data.DOC_NO</td>
                            <td>@Data.EMP_NAME</td>
                            <td>@Data.CUT_DOC_NO</td>
                            <td>@Data.ART_NAME</td>
                            <td>@Data.PROC_NAME</td>
                            <td>@Data.RECEIPT_QTY</td>
                            <td>
                                <a asp-action="EditMFG" asp-controller="MFGReceipt" asp-route-id="@Data.ID">
                                    <i class="fas fa-user-edit"></i>
                                </a>&nbsp;&nbsp;
                                <a asp-action="DeleteMFG" asp-controller="MFGReceipt" asp-route-id="@Data.ID">
                                    <i class="far fa-trash-alt"></i>
                                </a>&nbsp;&nbsp;
                                <a asp-action="ActionMFG" asp-controller="MFGReceipt" asp-route-id="@Data.ID">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            No Process Receipt Entry Created Yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to Add Process Receipt
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="MFGReceipt" asp-action="MFG_Receipt_Master">
                Add
            </a>
        </div>
    </div>
}
