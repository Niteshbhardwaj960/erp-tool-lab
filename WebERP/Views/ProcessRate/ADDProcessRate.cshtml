@model WebERP.Models.ProcessRate_Master

<div class="modal-content show-modal-content form_content">
    <div class="card">
        @if (Model.Type == "Add")
        {<nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow" style="background: linear-gradient(135deg, #ff00b1 0%, #3b009a 100%);">
             <h3 style="color:white">Add Process Rate</h3>
            </nav>}
        @if (Model.Type == "Edit")
        {<nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow" style="background: linear-gradient(135deg, #ff00b1 0%, #3b009a 100%);">
             <h3 style="color:white">Edit Process Rate</h3>
            </nav>}
        @if (Model.Type == "Action")
        {<nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow" style="background: linear-gradient(135deg, #ff00b1 0%, #3b009a 100%);">
             <h3 style="color:white">View Process Rate</h3>
            </nav>}
        <div class="card-body">
            <form id="menu-form" method="post" enctype="multipart/form-data">
                <h4 class="mb-4 navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow"><b>Basic Details</b></h4>
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label class="form-label">Process Name</label>
                            <div class="input-group">
                                <input type="text" class="form-control numb" asp-for="Proc_Code">
                            </div>
                            <span asp-validation-for="Proc_Code" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label class="form-label">Rate</label>
                            <div class="input-group">
                                <input type="text" class="form-control numb" asp-for="Rate">
                            </div>
                            <span asp-validation-for="Rate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label class="form-label">UOM Name</label>
                            <div class="input-group">
                                <select asp-for="UOM_Code" class="form-control" asp-items="@(new SelectList(Model.UOMDropDown,"Value", "Text"))"></select>
                            </div>
                            <span asp-validation-for="UOM_Code" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label class="form-label">From Date</label>
                            <div class="input-group">
                                <input type="date" class="form-control numb" asp-for="From_DATE">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label class="form-label">To Date</label>
                            <div class="input-group">
                                <input type="date" class="form-control numb" asp-for="To_DATE">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    &nbsp;&nbsp;<a class="btn btn-app mr-2 mt-1 mb-1 btn-secondary pull-right" asp-action="ProcessRate_Master">Close</a>
                    @if (Model.Type == "Add")
                    {
                        <button class="btn btn-app btn-danger mr-2 mt-1 mb-1 us-button pull-right" asp-controller="ProcessRate" asp-action="SAVEProcessRate">
                            <i class="fa fa-save"></i> Save
                        </button>
                    }
                    @if (Model.Type == "Edit")
                    {
                        <button class="btn btn-app btn-danger mr-2 mt-1 mb-1 us-button pull-right" asp-controller="ProcessRate" asp-action="EditProcessRate">
                            <i class="fa fa-save"></i> Update
                        </button>
                    }
                </div>
            </form>
        </div>

    </div>
</div>